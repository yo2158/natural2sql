# Gemini API設定
# APIキーの取得: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# データベース設定（SQLite: デフォルト、サンプルDBを使用）
DB_TYPE=sqlite
DATABASE_PATH=data/restaurant.db

# MySQL接続設定（MySQLを使用する場合はコメント解除）
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_NAME=your_database_name

# 論理名・ビジネス用語定義（オプション）
LOGICAL_NAMES_PATH=config/logical_names_sample.csv
BUSINESS_TERMS_PATH=config/business_terms_sample.jsonl

# Ollama設定（オプション、ローカルLLM実行時のみ）
# Ollamaを使用する場合、ベースURLを設定
# モデル（gemma3:12b/gemma3:27b/gpt-oss:latest）はUI上で選択可能
OLLAMA_BASE_URL=http://localhost:11434

# アプリケーション設定
MAX_RETRY_COUNT=3
AI_TIMEOUT_SECONDS=120
SQL_TIMEOUT_SECONDS=30
PREVIEW_LIMIT=10
